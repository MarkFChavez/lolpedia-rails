<%= form_with url: search_champions_path, method: :get, class: "mb-8" do |f| %>
  <%= f.text_field :query,
      value: params[:query],
      placeholder: "Enter champion name (e.g., Ahri, Yasuo, Zed)",
      class: "w-full px-6 py-4 text-lg border-2 border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-800 text-gray-100",
      autofocus: true %>
<% end %>
