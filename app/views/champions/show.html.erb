<%= render "champions/search_form" %>

<% if @champion %>
  <!-- Champion Header -->
  <div class="bg-lol-blue-800 rounded-lg shadow-lg shadow-lol-gold-600/10 overflow-hidden mb-8 border border-lol-blue-700">
    <!-- Champion Splash Art -->
    <div class="relative h-64 md:h-80 lg:h-96 overflow-hidden">
      <%= image_tag "https://ddragon.leagueoflegends.com/cdn/img/champion/splash/#{@champion['id']}_0.jpg",
          alt: @champion['name'],
          class: "w-full h-full object-cover object-top" %>
    </div>

    <!-- Champion Tags and Info -->
    <div class="p-4 md:p-6 lg:p-8 bg-gradient-to-b from-lol-blue-800 to-lol-blue-900">
      <!-- Champion Name and Title -->
      <h1 class="text-3xl md:text-4xl font-bold text-lol-gold-400 mb-2">
        <%= @champion['name'] %>
      </h1>
      <p class="text-lg md:text-xl text-gray-400 mb-6">
        <%= @champion['title'] %>
      </p>

      <div class="flex gap-2 mb-4">
        <% @champion['tags'].each do |tag| %>
          <span class="px-3 py-1 bg-lol-teal-600/30 text-lol-teal-400 rounded-full text-sm font-medium border border-lol-teal-600/50">
            <%= tag %>
          </span>
        <% end %>
      </div>
      <p class="text-gray-300 leading-relaxed">
        <%= @champion['blurb'] %>
      </p>
    </div>
  </div>

  <!-- Abilities Section -->
  <div class="bg-lol-blue-800 rounded-lg shadow-lg shadow-lol-gold-600/10 p-4 md:p-6 lg:p-8 border border-lol-blue-700">
    <h2 class="text-2xl md:text-3xl font-bold mb-6 bg-gradient-to-r from-lol-gold-500 to-lol-gold-400 bg-clip-text text-transparent">Abilities</h2>

    <!-- Passive Ability -->
    <% if @champion['passive'] %>
      <div class="mb-8 p-4 md:p-6 bg-gradient-to-r from-purple-600/30 to-purple-500/20 rounded-lg border-l-4 border-purple-400 shadow-lg shadow-purple-900/50">
        <div class="flex items-start gap-4">
          <%= image_tag "https://ddragon.leagueoflegends.com/cdn/15.23.1/img/passive/#{@champion['passive']['image']['full']}",
              alt: @champion['passive']['name'],
              class: "w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 rounded-lg ring-2 ring-purple-400/50" %>
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-2">
              <span class="px-3 py-1 bg-purple-500 text-white text-sm font-bold rounded shadow-md">PASSIVE</span>
              <h3 class="text-lg md:text-xl font-bold text-purple-100"><%= @champion['passive']['name'] %></h3>
            </div>
            <p class="text-gray-200"><%= @champion['passive']['description'] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Active Abilities (Q, W, E, R) -->
    <% if @champion['spells'] %>
      <div class="space-y-6">
        <% @champion['spells'].each_with_index do |spell, index| %>
          <% ability_key = ['Q', 'W', 'E', 'R'][index] %>
          <% is_ultimate = ability_key == 'R' %>
          <div class="p-4 md:p-6 bg-gray-700/50 rounded-lg <%= 'ring-1 ring-yellow-500/30' if is_ultimate %>">
            <div class="flex items-start gap-4">
              <%= image_tag "https://ddragon.leagueoflegends.com/cdn/15.23.1/img/spell/#{spell['image']['full']}",
                  alt: spell['name'],
                  class: "w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 rounded-lg #{'ring-2 ring-yellow-400/50' if is_ultimate}" %>
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="px-3 py-1.5 <%= is_ultimate ? 'bg-gradient-to-br from-yellow-500 to-orange-600' : 'bg-cyan-600' %> text-white text-sm font-bold rounded-md shadow-md min-w-[2.5rem] text-center">
                    <%= ability_key %>
                  </span>
                  <h3 class="text-lg md:text-xl font-bold <%= is_ultimate ? 'text-yellow-100' : 'text-gray-100' %>"><%= spell['name'] %></h3>
                </div>
                <p class="text-gray-200 mb-2"><%= spell['description'] %></p>
                <% if spell['cooldownBurn'] && spell['cooldownBurn'] != "0" %>
                  <p class="text-sm text-gray-300">
                    <span class="font-semibold">Cooldown:</span> <%= spell['cooldownBurn'] %>s
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-gray-800 rounded-lg shadow-lg p-4 md:p-6 lg:p-8 text-center">
    <p class="text-gray-300">No champion data available.</p>
    <%= link_to "Search for a champion", root_path, class: "cursor-pointer mt-4 inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg" %>
  </div>
<% end %>
