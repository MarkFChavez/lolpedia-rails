<%
  # Empty state component for champions and items pages
  # Usage: render "shared/empty_state", type: "champion"
  #        render "shared/empty_state", type: "item"

  display_type = local_assigns[:type] || "champion"
  title = display_type == "champion" ? "Discover Champions" : "Discover Items"
  subtitle = display_type == "champion" ?
    "Search for any champion to view their abilities, stats, and lore" :
    "Search for any item to view stats, build paths, and gold costs"
%>

<div class="flex items-center justify-center min-h-[500px] px-4 py-12">
  <div class="max-w-md w-full text-center relative">

    <!-- Hexagonal Icon Container -->
    <div class="relative inline-block mb-8">
      <!-- Outer hexagon glow -->
      <div class="absolute inset-0 blur-xl opacity-30">
        <div class="w-32 h-32 bg-gradient-to-br from-lol-gold-500 to-lol-teal-500 rounded-lg rotate-45"></div>
      </div>

      <!-- Main hexagon -->
      <div class="relative">
        <div class="w-32 h-32 bg-gradient-to-br from-lol-blue-800 to-lol-blue-900 border-4 border-lol-gold-600/50 rounded-lg rotate-45 flex items-center justify-center shadow-2xl">
          <div class="-rotate-45 flex items-center justify-center">
            <!-- Search Icon -->
            <svg class="w-12 h-12 text-lol-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>

        <!-- Corner accents -->
        <div class="absolute -top-1 -right-1 w-4 h-4 border-t-2 border-r-2 border-lol-teal-500"></div>
        <div class="absolute -bottom-1 -left-1 w-4 h-4 border-b-2 border-l-2 border-lol-teal-500"></div>
      </div>
    </div>

    <!-- Title -->
    <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-lol-gold-500 to-lol-gold-300 mb-3">
      <%= title %>
    </h2>

    <!-- Subtitle -->
    <p class="text-gray-400 text-lg mb-8 leading-relaxed">
      <%= subtitle %>
    </p>

    <!-- Decorative divider -->
    <div class="flex items-center justify-center gap-3 mb-8">
      <div class="w-12 h-px bg-gradient-to-r from-transparent to-lol-gold-600/50"></div>
      <div class="w-2 h-2 border-2 border-lol-gold-600/50 rotate-45"></div>
      <div class="w-12 h-px bg-gradient-to-l from-transparent to-lol-gold-600/50"></div>
    </div>

    <!-- Call to action -->
    <div class="inline-flex items-center gap-2 px-6 py-3 bg-lol-blue-800/50 border border-lol-gold-600/30 rounded-lg">
      <svg class="w-5 h-5 text-lol-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
      <span class="text-lol-teal-500 font-medium">Use the search bar above to get started</span>
    </div>

    <!-- Subtle background pattern -->
    <div class="absolute inset-0 -z-10 overflow-hidden opacity-5">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 border border-lol-gold-600 rotate-45 rounded-lg"></div>
      <div class="absolute bottom-1/4 right-1/4 w-48 h-48 border border-lol-teal-600 rotate-12 rounded-lg"></div>
    </div>
  </div>
</div>
