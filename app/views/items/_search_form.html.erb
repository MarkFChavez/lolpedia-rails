<%= form_with url: search_items_path, method: :get, class: "mb-8" do |f| %>
  <%= f.text_field :query,
      value: params[:query],
      placeholder: "Search for an item (e.g., Infinity Edge, boots, sword)",
      class: "w-full px-4 md:px-6 py-3 md:py-4 text-base md:text-lg border md:border-2 border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-800 text-gray-100",
      autofocus: true %>
<% end %>
