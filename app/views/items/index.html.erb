<%= render "items/search_form" %>

<div class="text-center text-lol-teal-500 mb-12">
  <p class="text-sm"><%= @items.present? ? 'Select an item:' : 'Enter item name to search' %></p>
  <p class="text-xs mt-2 text-gray-400"><%= @items.present? ? "Found #{@items.size} matches" : 'Search is case-insensitive and supports partial names' %></p>
</div>

<% if @items.present? %>

  <!-- Items Grid -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
    <% @items.each do |item| %>
      <%= link_to item_path(item.item_id),
          class: "cursor-pointer group bg-lol-blue-800 hover:bg-lol-blue-700 rounded-lg shadow-lg p-3 md:p-4 transition-all duration-200 hover:scale-105 hover:shadow-lol-gold-600/30 border-2 border-lol-blue-700 hover:border-lol-gold-500/50 flex flex-col items-center" do %>

        <!-- Item Icon -->
        <div class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 mb-3 rounded-lg overflow-hidden ring-2 ring-lol-blue-600 group-hover:ring-lol-gold-500/50 transition-all">
          <%= image_tag "https://ddragon.leagueoflegends.com/cdn/15.23.1/img/item/#{item.image_full}",
              alt: item.name,
              class: "w-full h-full object-cover" %>
        </div>

        <!-- Item Name -->
        <h3 class="text-xs md:text-sm font-semibold text-center text-gray-200 group-hover:text-lol-gold-400 transition-colors mb-2 line-clamp-2 min-h-[2.5rem]">
          <%= item.name %>
        </h3>

        <!-- Gold Cost -->
        <% if item.gold && item.gold["total"] %>
          <div class="flex items-center gap-1 text-lol-gold-400">
            <span class="text-xs font-bold"><%= item.gold["total"] %></span>
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <circle cx="10" cy="10" r="8" />
            </svg>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <%= render "shared/empty_state", type: "item" %>
<% end %>
