<!-- Tag Filters -->
<div class="mb-8">
  <div class="flex flex-wrap gap-2">
    <%= link_to "All Items",
        items_path,
        class: "cursor-pointer px-4 py-2 rounded-lg transition-colors duration-200 #{@selected_tag.nil? ? 'bg-lol-teal-600 text-white font-semibold' : 'bg-lol-blue-800 text-gray-300 hover:bg-lol-blue-700 hover:text-lol-teal-400'}" %>

    <% @all_tags.each do |tag| %>
      <%= link_to tag,
          items_path(tag: tag),
          class: "cursor-pointer px-4 py-2 rounded-lg transition-colors duration-200 #{@selected_tag == tag ? 'bg-lol-teal-600 text-white font-semibold' : 'bg-lol-blue-800 text-gray-300 hover:bg-lol-blue-700 hover:text-lol-teal-400'}" %>
    <% end %>
  </div>
</div>

<% if @items.any? %>
  <!-- Item Count -->
  <p class="text-sm text-gray-400 mb-4">
    Showing <%= @items.count %> <%= @selected_tag ? "#{@selected_tag} " : "" %>item<%= @items.count == 1 ? '' : 's' %>
  </p>

  <!-- Items Grid -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
    <% @items.each do |item| %>
      <%= link_to item_path(item.item_id),
          class: "cursor-pointer group bg-lol-blue-800 hover:bg-lol-blue-700 rounded-lg shadow-lg p-4 transition-all duration-200 hover:scale-105 hover:shadow-lol-gold-600/30 border-2 border-lol-blue-700 hover:border-lol-gold-500/50 flex flex-col items-center" do %>

        <!-- Item Icon -->
        <div class="w-16 h-16 mb-3 rounded-lg overflow-hidden ring-2 ring-lol-blue-600 group-hover:ring-lol-gold-500/50 transition-all">
          <%= image_tag "https://ddragon.leagueoflegends.com/cdn/15.23.1/img/item/#{item.image_full}",
              alt: item.name,
              class: "w-full h-full object-cover" %>
        </div>

        <!-- Item Name -->
        <h3 class="text-sm font-semibold text-center text-gray-200 group-hover:text-lol-gold-400 transition-colors mb-2 line-clamp-2 min-h-[2.5rem]">
          <%= item.name %>
        </h3>

        <!-- Gold Cost -->
        <% if item.gold && item.gold["total"] %>
          <div class="flex items-center gap-1 text-lol-gold-400">
            <span class="text-xs font-bold"><%= item.gold["total"] %></span>
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <circle cx="10" cy="10" r="8" />
            </svg>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <!-- No Items Found -->
  <div class="bg-lol-blue-800 rounded-lg shadow-lg p-8 text-center border border-lol-blue-700">
    <p class="text-gray-300 mb-4">No items found<%= " in category '#{@selected_tag}'" if @selected_tag %>.</p>
    <%= link_to "View All Items", items_path,
        class: "cursor-pointer inline-block px-6 py-3 bg-lol-teal-600 hover:bg-lol-teal-500 text-white rounded-lg transition-colors duration-200" %>
  </div>
<% end %>
